<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="sale_order_form_extended" model="ir.ui.view">
            <field name="name">sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"></field>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='cancel']" position="after">
                    <button name="revise" states="sent,negotiation,pending" string="Revise" groups="base.group_user"/>
                    <button name="negotiation" states="sent" string="Negotiation" groups="base.group_user"/>
                    <button name="pending" states="sent,negotiation" string="Pending" groups="base.group_user"/>
                </xpath>
                <xpath expr="//button[@name='copy_quotation']" position="replace">
                    <button name="copy_quotation" states="revised" string="New Copy of Quotation" type="object"/>
                </xpath>
                <notebook position="inside">
                    <page string="Revisions">
                        <field name="old_rev_ids" readonly="1">
                            <tree>
                                <field name='name'/>
                                <field name='create_date'/>
                                <field name='create_uid'/>
                                <field name='state' invisible="1"/>
                            </tree>
                        </field>
                        <group attrs="{'invisible': [('active', '=', True)]}">
                            <field name="curr_rev_id"/>
                            <field name="active" invisible="1"/>
                        </group>
                    </page>
                </notebook>
            </field>
        </record>
    </data>
</openerp>
