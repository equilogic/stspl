        <!-- Payment Term -->

		<!--	TT with PO    -->
        <record id="account_payment_term_tt_po" model="account.payment.term">
            <field name="name">TT with PO – usual time 1 week – (Advance Payment)</field>
            <field name="note">TT with PO – usual time 1 week – (Advance Payment)</field>
        </record>
        <record id="account_payment_term_line_tt_po" model="account.payment.term.line">
            <field name="value">balance</field>
            <field eval="7" name="days"/>
