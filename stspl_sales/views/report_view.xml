<openerp>
    <data>
        <!--  Sales Qweb Report -->
        <report
            id="sale_report"
            model="sale.order"
            string="Sales"
            report_type="qweb-pdf"
            name="stspl_sales.report_sale_order"
            file="stspl_sales.report_sale_order"
            />

        <!--  Delivery Order qweb Report -->
        <report
            id="delivery_order_report"
            model="stock.picking"
            string="Delivery"
            report_type="qweb-pdf"
            name="stspl_sales.report_sale_delivery_order"
            file="stspl_sales.report_sale_delivery_order"
            />

        <report 
            id="sale.report_sale_order"
            string="Quotation / Order"
            model="sale.order" 
            report_type="qweb-pdf"
            file="sale.report_saleorder" 
            name="sale.report_saleorder" 
            menu="False"
        />
        
        <report 
            string="Picking" 
            id="stock.action_report_picking" 
            model="stock.picking" 
            report_type="qweb-pdf"
            name="stock.report_picking" 
            file="stock.report_picking" 
            menu="False"
        />
        
        <!-- Partner Account Statement-->
        <report
            id="account_statement"
            model="res.partner"
            string="Account Statement"
            report_type="qweb-pdf"
            name="stspl_sales.stspl_sales_partner_account_statement_template"
            file="stspl_sales.stspl_sales_partner_account_statement_template"
            />

       
        <record id="paperformat_euro_lowmargin_stspl_sales_report" model="report.paperformat">
			<field name="name">European A4 low margin sales</field>
			<field name="default" eval="True" />
			<field name="format">A4</field>
			<field name="orientation">Portrait</field>
			<field name="margin_top">10</field>
			<field name="margin_bottom">50</field>
			<field name="margin_left">10</field>
			<field name="margin_right">10</field>
			<field name="header_line" eval="False" />
			<field name="header_spacing">40</field>
			<field name="dpi">90</field>
			<field name="report_ids"
				eval="[(4, ref('stspl_sales.sale_report'))]" /> 
		</record>

        <record id="paperformat_euro_lowmargin_stspl_delivery_report" model="report.paperformat">
            <field name="name">European A4 low margin delivery</field>
            <field name="default" eval="True" />
            <field name="format">A4</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">40</field>
            <field name="margin_bottom">50</field>
            <field name="margin_left">10</field>
            <field name="margin_right">10</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">30</field>
            <field name="dpi">90</field>
            <field name="report_ids"
                eval="[(4, ref('stspl_sales.delivery_order_report'))]" /> 
        </record>
		
        <record id="paperformat_euro_lowmargin_stspl_account_statement" model="report.paperformat">
            <field name="name">European A4 low margin SOA</field>
            <field name="default" eval="True" />
            <field name="format">A4</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">50</field>
            <field name="margin_bottom">50</field>
            <field name="margin_left">10</field>
            <field name="margin_right">10</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">40</field>
            <field name="dpi">90</field>
            <field name="report_ids"
                eval="[(4, ref('stspl_sales.account_statement'))]" /> 
        </record>

    </data>
</openerp>
