<openerp>
	<data>

		<!-- Inherited form view of sale order -->
		<record id="inherited_sale_form_view" model="ir.ui.view">
			<field name="name">inherited.sale.form.view.ex</field>
			<field name="model">sale.order</field>
			<field name="inherit_id" ref="sale.view_order_form" />
			<field name="arch" type="xml">
				<xpath expr="/form/sheet/group/group/field[@name='partner_shipping_id']" position="after">
					<field name="customer_po" />
					<field name="attn_sales"
						domain="[('type','=','contact'),('parent_id','=',partner_id)]"
						attrs="{'readonly': [('state','not in',('draft','sent'))]}" />					
				</xpath>
				<xpath expr="//page[@string='Other Information']//field[@name='company_id']" position='after'>
                    <field name="ship_via_id"/>
                </xpath>
                <xpath expr="//page[@string='Order Lines']/field[@name='order_line']/form[@string='Sales Order Lines']/group/group/field[@name='price_unit']" position='after'>
                    <field name="discount_type"/>
                </xpath>
                <xpath expr="//page[@string='Order Lines']/field[@name='order_line']/tree[@string='Sales Order Lines']/field[@name='discount']" position='before'>
                    <field name="discount_type"/>
                </xpath>
                <field name="amount_tax" position="before">
                    <field name="amount_discount" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                </field>
                <field name="partner_id" position="before">
                    <field name="is_po" invisible="1"/>
                    <field name="purchase_ids" invisible="1"/>
                </field>
                <button name="invoice_cancel" position="after">
                	<button name="%(po_wiz_action)d" string="Convert to RFQ" 
                	type="action" attrs="{'invisible':['|',('is_po', '=', True),('state','not in',('draft','sent'))]}"/>
                </button>
			</field>
		</record>

		 <!-- Shipment Term View -->
        <record id="shipment_term_tree_view" model="ir.ui.view" >
            <field name="name">shipment.term.tree.view</field>
            <field name="model">shipment.term</field>
            <field name="arch" type="xml">
                <tree string="Shipment Term">
	                <field name="name"/>
				</tree>
            </field>
        </record>

        <!-- Shipment Term Form -->
        <record id="shipment_term_form_view" model="ir.ui.view" >
            <field name="name">shipment.term.form.view</field>
            <field name="model">shipment.term</field>
            <field name="arch" type="xml">
                <form string="Shipment Term">
                	<group>
	                	<field name="name"/>
	          		</group>
				</form>
            </field>
        </record>

        <!-- Shipment Term Search -->
        <record id="shipment_term_search_view" model="ir.ui.view" >
            <field name="name">shipment.term.search.view</field>
            <field name="model">shipment.term</field>
            <field name="arch" type="xml">
                <search string="Shipment Term">
	                <field name="name"/>
	                <filter name="grp_name" string="Shipment Term" domain="[]" context="{'group_by':'name'}"/>
				</search>
            </field>
        </record>
		
		<!-- Shipment Term Action -->
        <record id="shipment_term_action" model="ir.actions.act_window" >
            <field name="name">Shipment Term</field>
            <field name="res_model">shipment.term</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_shipment_term':'name'}</field>
        </record>
        
        <!-- Menu for Shipment Term -->
        <menuitem id="shipment_term_menu" parent="base.menu_product"
                  action="shipment_term_action"/>


         <!-- Forwarder View -->
        <record id="forwarder_tree_view" model="ir.ui.view" >
            <field name="name">forwarder.tree.view</field>
            <field name="model">forwarder</field>
            <field name="arch" type="xml">
                <tree string="Forwarder">
                    <field name="name"/>
                    <field name="code"/>
                </tree>
            </field>
        </record>

        <!-- Forwarder Form -->
        <record id="forwarder_form_view" model="ir.ui.view" >
            <field name="name">forwarder.form.view</field>
            <field name="model">forwarder</field>
            <field name="arch" type="xml">
                <form string="Forwarder">
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                    </group>
                </form>
            </field>
        </record>

        <!-- Forwarder Search -->
        <record id="forwarder_search_view" model="ir.ui.view" >
            <field name="name">forwarder.search.view</field>
            <field name="model">forwarder</field>
            <field name="arch" type="xml">
                <search string="Forwarder">
                    <field name="name"/>
                    <filter name="grp_name" string="Forwarder" domain="[]" context="{'group_by':'name'}"/>
                </search>
            </field>
        </record>
        
        <!-- Forwarder Action -->
        <record id="forwarder_action" model="ir.actions.act_window" >
            <field name="name">Forwarder</field>
            <field name="res_model">forwarder</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_forwarder':'name'}</field>
        </record>
        
        <!-- Menu for Forwarder -->
        <menuitem id="forwarder_menu" parent="base.menu_product"
                  action="forwarder_action"/>

	</data>
</openerp>