<openerp>
	<data>

		<!-- Inherited form view of sale order -->
		<record id="inherited_sale_form_view" model="ir.ui.view">
			<field name="name">inherited.sale.form.view.ex</field>
			<field name="model">sale.order</field>
			<field name="inherit_id" ref="sale.view_order_form" />
			<field name="arch" type="xml">
				<xpath expr="/form/sheet/group/group/field[@name='partner_shipping_id']" position="after">
					<field name="customer_po" />
					<field name="attn_sales"
						domain="[('type','=','contact'),('parent_id','=',partner_id)]"
						attrs="{'readonly': [('state','not in',('draft','sent'))]}" />					
				</xpath>
				<xpath expr="//page[@string='Other Information']//field[@name='company_id']" position='after'>
                    <field name="ship_via_id"/>
                </xpath>
			</field>
		</record>


		 <!-- Shipment Term View -->
        <record id="shipment_term_tree_view" model="ir.ui.view" >
            <field name="name">shipment.term.tree.view</field>
            <field name="model">shipment.term</field>
            <field name="arch" type="xml">
                <tree string="Shipment Term">
	                <field name="name"/>
				</tree>
            </field>
        </record>

        <!-- Shipment Term Form -->
        <record id="shipment_term_form_view" model="ir.ui.view" >
            <field name="name">shipment.term.form.view</field>
            <field name="model">shipment.term</field>
            <field name="arch" type="xml">
                <form string="Shipment Term">
                	<group>
	                	<field name="name"/>
	          		</group>
				</form>
            </field>
        </record>

        <!-- Shipment Term Search -->
        <record id="shipment_term_search_view" model="ir.ui.view" >
            <field name="name">shipment.term.search.view</field>
            <field name="model">shipment.term</field>
            <field name="arch" type="xml">
                <search string="Shipment Term">
	                <field name="name"/>
	                <filter name="grp_name" string="Shipment Term" domain="[]" context="{'group_by':'name'}"/>
				</search>
            </field>
        </record>
		
		<!-- Shipment Term Action -->
        <record id="shipment_term_action" model="ir.actions.act_window" >
            <field name="name">Shipment Term</field>
            <field name="res_model">shipment.term</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_shipment_term':'name'}</field>
        </record>
        
        <!-- Menu for Shipment Term -->
        <menuitem id="shipment_term_menu" parent="base.menu_product"
                  action="shipment_term_action"/>

	</data>
</openerp>