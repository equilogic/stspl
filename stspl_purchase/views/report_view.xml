<openerp>
    <data>
        
        <!--  Purchase report Qweb Report -->
        <report
            id="purchase_report"
            model="purchase.order"
            string="Purchase Report"
            report_type="qweb-pdf"
            name="stspl_purchase.report_purchase_order"
            file="stspl_purchase.report_purchase_order"
            />

        <record id="paperformat_euro_lowmargin_stspl_purchase_report" model="report.paperformat">
            <field name="name">European A4 low margin</field>
            <field name="default" eval="True" />
            <field name="format">A4</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">45</field>
            <field name="margin_bottom">70</field>
            <field name="margin_left">10</field>
            <field name="margin_right">10</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">40</field>
            <field name="dpi">100</field>
            <field name="report_ids"
                eval="[(4, ref('stspl_purchase.purchase_report'))]" /> 
        </record>

            
        <!--  Purchase Qweb Report -->
        <report
            id="stspl_tax_invoice"
            model="account.invoice"
            string="Tax Invoice"
            report_type="qweb-pdf"
            name="stspl_purchase.report_stspl_tax_invoice"
            file="stspl_purchase.report_stspl_tax_invoice"
            />

        <record id="paperformat_euro_lowmargin_stspl_tax_invoice" model="report.paperformat">
            <field name="name">European A4 low margin</field>
            <field name="default" eval="True" />
            <field name="format">A4</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">45</field>
            <field name="margin_bottom">80</field>
            <field name="margin_left">10</field>
            <field name="margin_right">10</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">40</field>
            <field name="dpi">100</field>
            <field name="report_ids"
                eval="[(4, ref('stspl_purchase.stspl_tax_invoice'))]" /> 
        </record>

        </data>
</openerp>