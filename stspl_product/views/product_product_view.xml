<openerp>
    <data>
    	
    	<!-- Inherited Product Form View -->
    	<record model="ir.ui.view" id="customer_product_view">
            <field name="name">customer.product.view</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <page string="Information" position="after">
                    <page string="Customer Code">
                         <field name="prod_cust_code_ids" nolabel="1" colspan="4" widget="one2many_list">
                            <tree string="Product Customer Code1" editable="bottom">
                                <field name="prod_code"/>
                                <field name="partner_id"/>
                            </tree>
                            <form string="Product Customer Code" >
                                <field name="prod_code"/>
                                <field name="partner_id"/>
                            </form> 
                        </field>
                    </page>
                </page>
            </field>
        </record> 
        
        <record id="product_template_form_view_inherited" model="ir.ui.view">
            <field name="name">product.template.form.view.inherited</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
				<xpath expr="//field[@name='company_id']" position="after">
					<field name="remark"/>
				</xpath>
                <xpath expr="//field[@name='type']" position="after">
                    <field name="brand"/>
                    <field name="code"/>
                    <field name="hs_code"/>
                </xpath>
            </field>
        </record>


        <!--  Brand  Tree View-->
        <record model="ir.ui.view" id="brand_tree_view">
            <field name="name">Brand.tree</field>
            <field name="model">brand.brand</field>
            <field name="arch" type="xml">
                <tree string="Brand">                
                       <field name="name"/>
                       <field name="code"/>
                </tree>
            </field>
        </record>

        <!-- Brand Form View -->
        <record model="ir.ui.view" id="brand_form_view">
            <field name="name">Brand.form</field>
            <field name="model">brand.brand</field>
            <field name="arch" type="xml">
                <form string="Brand">                
                    <sheet>
                        <group>
                            <field name="name" required="1"/>
                            <field name="code"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Brand Action -->
        <record model="ir.actions.act_window" id="brand_list_action">
            <field name="name">Brands</field>
            <field name="res_model">brand.brand</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        
        <!-- Menu for Brand -->
        <menuitem id="brand_menu" name="Brands" parent="base.menu_product"
                  action="brand_list_action"/>
                  
        
		 <!-- Ship Via View -->
        <record id="landed_cost_tree_view" model="ir.ui.view" >
            <field name="name">ship.via.tree.view</field>
            <field name="model">ship.via</field>
            <field name="arch" type="xml">
                <tree string="Ship Via">
	                <field name="name" />
				</tree>
            </field>
        </record>
		
		
		<!-- Landed Cost Action -->
        <record id="ship_via_action" model="ir.actions.act_window" >
            <field name="name">Ship Via</field>
            <field name="res_model">ship.via</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        
        <!-- Menu for Landed cost -->
        <menuitem id="ship_vai_menu" parent="base.menu_product"
                  action="ship_via_action"/>    
                                    
    </data>
</openerp>