<openerp>
    <data>
            
        <!--  Purchase Qweb Report -->
        <report
            id="stspl_tax_invoice"
            model="account.invoice"
            string="Tax Invoice"
            report_type="qweb-pdf"
            name="stspl_account.report_stspl_tax_invoice"
            file="stspl_account.report_stspl_tax_invoice"
            />

        <report
            id="packing_list_report"
            model="account.invoice"
            string="Packing"
            report_type="qweb-pdf"
            name="stspl_account.report_packing_list"
            file="stspl_account.report_packing_list"
            />

        <report
            id="sale_acknowledgment_id"
            model="sale.order"
            string="Acknowledgment"
            report_type="qweb-pdf"
            name="stspl_account.report_sale_acknowledgment"
            file="stspl_account.report_sale_acknowledgment"
            />


        <report
            id="proforma_invoice_id"
            model="sale.order"
            string="Proforma Invoice"
            report_type="qweb-pdf"
            name="stspl_account.report_stspl_proforma_invoice"
            file="stspl_account.report_stspl_proforma_invoice"
            />

        <!-- Statement of Account -->
        <report
            id="statement_of_account_id"
            string="Statement of Account"
            model="account.invoice"
            name="stspl_account.stspl_account_statement_of_account_template"
            report_type="qweb-pdf"
            menu="False"
            />


        <report 
            id="account.account_invoices"
            model="account.invoice"
            string="Invoices"
            report_type="qweb-pdf"
            name="account.report_invoice"
            file="account.report_invoice"
            attachment_use="True"
            attachment="(object.state in ('open','paid')) and ('INV'+(object.number or '').replace('/','')+'.pdf')"
            menu="False"
        />
        
        <record id="paperformat_euro_lowmargin_stspl_tax_invoice" model="report.paperformat">
            <field name="name">European A4 low margin</field>
            <field name="default" eval="True" />
            <field name="format">A4</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">45</field>
            <field name="margin_bottom">80</field>
            <field name="margin_left">10</field>
            <field name="margin_right">10</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">30</field>
            <field name="dpi">100</field>
            <field name="report_ids"
                eval="[(4, ref('stspl_account.stspl_tax_invoice'))]" /> 
        </record>

        <record id="paperformat_euro_lowmargin1" model="report.paperformat">
            <field name="name">European A4 margin Packing List</field>
            <field name="default" eval="True" />
            <field name="format">A4</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">70</field>
            <field name="margin_bottom">20</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">70</field>
            <field name="dpi">20</field>
            <field name="report_ids" eval="[(4, ref('stspl_account.packing_list_report'))]"/> 
        </record>


         <record id="paperformat_euro_lowmargin_stspl_1" model="report.paperformat">
            <field name="name">European A4 low margin acknowledgment</field>
            <field name="default" eval="True" />
            <field name="format">A4</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">10</field>
            <field name="margin_bottom">10</field>
            <field name="margin_left">10</field>
            <field name="margin_right">10</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">45</field>
            <field name="dpi">100</field>
            <field name="report_ids"
                eval="[(4, ref('stspl_account.sale_acknowledgment_id'))]" /> 
        </record>
    
        <record id="paperformat_euro_lowmargin_stspl_performa_invoice" model="report.paperformat">
            <field name="name">European A4 low margin</field>
            <field name="default" eval="True" />
            <field name="format">A4</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">49</field>
            <field name="margin_bottom">70</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">40</field>
            <field name="dpi">100</field>
            <field name="report_ids"
                eval="[(4, ref('stspl_account.proforma_invoice_id'))]" /> 
        </record>


        <record id="paperformat_euro_lowmargin_stspl_statement_of_account" model="report.paperformat">
            <field name="name">European A4 low margin sales</field>
            <field name="default" eval="True" />
            <field name="format">A4</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">50</field>
            <field name="margin_bottom">50</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">32</field>
            <field name="dpi">90</field>
            <field name="report_ids"
                eval="[(4, ref('stspl_account.statement_of_account_id'))]" /> 
        </record>

    </data>
</openerp>