<openerp>
    <data>
            
        <!--  Purchase Qweb Report -->
        <report
            id="stspl_tax_invoice"
            model="account.invoice"
            string="Tax Invoice"
            report_type="qweb-pdf"
            name="stspl_account.report_stspl_tax_invoice"
            file="stspl_account.report_stspl_tax_invoice"
            />

        <report
            id="packing_list_report"
            model="account.invoice"
            string="Packing Report"
            report_type="qweb-pdf"
            name="stspl_account.report_packing_list"
            file="stspl_account.report_packing_list"
            />

        <report
            id="sale_acknowledgment_id"
            model="account.invoice"
            string="Acknowledgment Report"
