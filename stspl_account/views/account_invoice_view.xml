<openerp>
	<data>
		<record id="inherited_invoice_form" model="ir.ui.view">
            <field name="name">account.invoice.inherited.form</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
            	<xpath expr="//field[@name='partner_id']" position="after">
            		<field name="purchase_id" invisible="1"/>
            		<field name="sales_id" invisible="1"/>
            	</xpath>

                <xpath expr="//page[@string='Other Info']//field[@name='date_due']" position='after'>
                    <field name="ship_via_id"/>
                </xpath>
         	</field>
        </record>
	</data>
</openerp>

