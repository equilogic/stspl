<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
      <!-- Template for Header and Footer -->
      <template id="external_layout_stspl_account_bank_invoice">
        <!-- Multicompany -->
        <t t-if="o and 'company_id' in o">
        	<t t-set="company" t-value="o.company_id"/>
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"/>
        </t>
    
        <t t-call="stspl_account.external_layout_header_stspl_bank_invoice"/>
        <t t-raw="0"/>
        <t t-call="stspl_account.external_layout_footer_stspl_bank_invoice"/>
      </template>
      
      <!-- Report Header -->
      <template id="external_layout_header_stspl_bank_invoice">
        <div class="header">

       		<div class="col-xs-3">
       			<span t-if="o.company_id">
   				   <img t-att-src="'data:image/png;base64,%s' % o.company_id.logo" style="max-height: 65px;"/>
   				 </span>
   			  </div>
       		<div class="col-xs-8 col-xs-offset-1 text-right">
       			<div t-if="o.company_id" style="font-size:12px">
                    <div>
                        <h5><b><span t-field="o.company_id.name" ></span></b></h5>
                    </div>
     		        <div>
		                <span t-field="o.company_id.street"/>
		                <t t-if="o.company_id.street">,</t>
						<span t-field="o.company_id.city"/>
						<t t-if="o.company_id.city">,</t>
 						<span t-field="o.company_id.country_id"/>
                        <span t-field="o.company_id.zip"/>
 					</div>
 					<div>
 						<span>Tel :</span>
 						<span t-field="o.company_id.phone"/>
 						
 						<span> Fax :</span>
 						<span t-field="o.company_id.fax"/>
 					</div>
 					<div>
 						<span >CO. REG. NO. </span>
 						<span t-field="o.company_id.company_registry" />
 					</div>
 					<div>
 						<span class="text-right">GST REG NO. </span>
 						<t t-if="o.company_id.gst_no"><span t-field="o.company_id.gst_no"/></t>
 					</div>
       			</div>
       		</div>
          	<div>
          		<span>Bank Reconciliation as at</span>
          		<span style="padding:5px" t-field="o.date"/>
          	</div> 
          	<div>
          		<span>DBS USD</span>
          		<span />
          	</div>
        </div>
      </template>

      <!-- Report Footer -->
      <template id="external_layout_footer_stspl_bank_invoice">
        <div class="footer">
          <div class="last-page">
            <div class="row">
            	<table style="border-top:0.5px solid;font-size:11px" width="100%">
	            	<td width="20%">
	         			<ul class="list-inline" style='text-align:center'>
	                  	<li><span class="page"/></li>
	                  	<li>/</li>
	                  	<li><span class="topage"/></li>
	                	</ul>
	         		</td>
         		</table>
            </div>
          </div>
        </div>
      </template>
      
      <!-- Reports Template Main -->
      <template id="stspl_account_bank_invoice_template">
        <style type="text/css"> 
            td.line , span.line ,th.line {
                font-family:times new roman;
            }
        </style>
        <t t-call="report.html_container">
          <t t-call="stspl_account.external_layout_stspl_account_bank_invoice">
            <div class="page">
            	<table width="100%">
            		<tr>
            			<td width="80%" class="text-left">
            				<span>BALANCE AS PER BANK BOOK</span>
            			</td>
            			<td width="10%" class="text-left">
            				<span t-field="o.company_id.currency_id.name"/>
            				<span t-field="o.company_id.currency_id.symbol"/>
            				<span t-field="o.balance_end_real"/>
            			</td>
            		</tr>
            	</table>
              <div class="oe_structure"/>
              <table class="table table-condensed" style="font-size:11px" width="100%">
                <thead>
                	<h5>(+) Unpresented Cheques</h5>
                 <tr>
                    <th class="text-center line" width="10%"></th>
                    <th class="text-left line" width="30%"></th>
                    <th class="text-center line" width="15%"></th>
                    <th class="text-center line" width="15%"></th>
                    <th class="text-center line" width="15%"></th>
                    <th class="text-center line" width="15%"></th>
                 </tr>
                </thead>
                <tbody>
                	<tr t-foreach="o.line_ids" t-as="line">
                		<td class="text-center">
                			<span t-field="line.date"/>
                		</td>
                		<td class="text-left">
                			<span t-field="line.name"/>
                		</td>
                		<td class="text-center">
                			<span t-field="line.ref"/>
                		</td>
                		<td class="text-center">
                			<span t-field="line.partner_id"/>
                		</td>
                		<td class="text-center">
                			<span t-field="line.amount"/>
                		</td>
                		<td class="text-center">
                			<span/>
                		</td>
                	</tr>
                </tbody>
              </table>
                <div class="text-right">
                	<span t-field="o.balance_end"/>
                </div>
            </div>
          </t>
        </t>
      </template>
        
      <template id="report_stspl_bank_invoice">
        <t t-call="report.html_container">
            <t t-foreach="doc_ids" t-as="doc_id">
                <t t-raw="translate_doc(doc_id, doc_model, 'name', 'stspl_account.stspl_account_bank_invoice_template')"/>
            </t>
        </t>
      </template>
    </data>
</openerp>
